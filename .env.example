# Environment Variables Template for AlpacaBot
# Copy this file to .env and fill in your actual values

# =============================================================================
# ALPACA API CONFIGURATION (REQUIRED)
# =============================================================================
# Get your API keys from:
# Paper Trading: https://app.alpaca.markets/paper/dashboard/overview
# Live Trading: https://app.alpaca.markets/brokerage/dashboard/overview

ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Use paper trading URL for testing (recommended)
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# For live trading, use this URL instead (BE CAREFUL!)
# ALPACA_BASE_URL=https://api.alpaca.markets

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development

# Timezone for trading (Eastern Time recommended)
TZ=America/New_York

# =============================================================================
# EMAIL NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Gmail configuration (requires App Password, not regular password)
# To get Gmail App Password:
# 1. Enable 2-factor authentication
# 2. Go to Google Account settings
# 3. Security -> App passwords
# 4. Generate new app password for "Mail"

EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# Notification settings
EMAIL_ENABLED=false
EMAIL_TRADE_ALERTS=true
EMAIL_DAILY_REPORTS=true

# =============================================================================
# SMS NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Twilio configuration for SMS alerts
# Sign up at: https://www.twilio.com/try-twilio
# Get credentials from: https://console.twilio.com/

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Your phone number (include country code, e.g., +1234567890)
SMS_TO_NUMBER=your_phone_number

# SMS settings
SMS_ENABLED=false
SMS_TRADE_ALERTS=true
SMS_IMPORTANT_ONLY=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Risk management settings
MAX_POSITION_SIZE=1000
MAX_DAILY_LOSS=500
POSITION_SIZE_PERCENT=2

# Trading session settings
ENABLE_PREMARKET=true
ENABLE_REGULAR_HOURS=true
ENABLE_AFTERHOURS=false

# Pattern trading settings
MIN_SHARE_PRICE=1.00
MAX_SHARE_PRICE=500.00
MIN_VOLUME=100000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development mode
DEBUG_MODE=false
VERBOSE_LOGGING=false

# For development, you might want to use mock data
USE_MOCK_DATA=false

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================
# These are automatically set by cloud providers
# Railway, Heroku, AWS, etc. will set these automatically

# PORT is set by the cloud provider
# DATABASE_URL (if using a database)
# REDIS_URL (if using Redis for caching)
